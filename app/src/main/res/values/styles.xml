<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/pressstart</item>
        <item name="fontFamily">@font/pressstart</item>

        <item name="colorPrimary">@color/bg1</item>

        <item name="android:navigationBarColor">@color/black</item> <!-- barva spodniho panelu telefonu! - tzv kde jsou tlacitka-->
        <item name="colorPrimaryDark">@color/black</item> <!-- barva horniho panelu telefonu! - tzv statusbar-->

        <item name="colorAccent">@color/bg1</item>
        <item name="actionBarItemBackground">@color/bg1</item>
        <item name="colorBackgroundFloating">@color/bg1</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
        <item name="itemTextAppearance">@style/NavimenuStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textSize">8sp</item> <!-- velikost pisma spodni panel!-->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="listMenuViewStyle">@style/NavigationDrawerStyle</item>
        <item name="android:preferenceScreenStyle">@style/PreferenceScreen</item>


    </style>



    <!--styl u alert dialog text-->
    <style name="TextAppearance.AppCompat.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">

        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextAppearance.AppCompat.Headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/pressstart</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextAppearance.AppCompat.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/pressstart</item>
        <item name="android:textSize">10sp</item>
    </style>

   <!-- <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/> -->


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pressstart</item>


    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/pressstart</item>


    </style>
    <style name="NavimenuStyle"> <!-- levypanel-->
        <item name="android:fontFamily">@font/pressstart</item>
        <item name="android:textSize">10sp</item>


    </style>

    <!--START alert dialog-->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/pressstart</item>
        <item name="android:textSize">10sp</item><!-- velikost tlacitek in dialog-->
        <item name="colorAccent">@color/colorWhite</item> <!-- TEXT tlacitek in dialog-->
        <item name="android:textColorPrimary">@color/bg2</item> <!-- TEXT in dialog-->
        <item name="fontFamily">@font/pressstart</item><!-- FONT in dialog-->
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:textColorAlertDialogListItem">@color/colorWhite</item> <!-- barva textu seznamu in dialog-->

        <item name="android:windowBackground">@drawable/roundsp</item>
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>

        <item name="android:colorControlHighlight">@color/colorGrey</item> <!-- barva pozadi pri kliknuti na odkazy/tlacitka-->

        <item name="android:shadowColor">@color/colorFBBlack</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>

        <item name="android:colorControlNormal">@color/colorWhite</item>
        <item name="android:colorControlActivated">@color/bg2</item>

    </style>


    <style name="MyTitleTextStyle">
        <item name="android:textColor">@color/colorWhite</item><!-- HEADER TEXT in dialog-->
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pressstart</item>
        <item name="fontFamily">@font/pressstart</item>
        <item name="android:colorButtonNormal">@color/bg2</item>
    </style>
    <!--END alert dialog-->

    <!--START left navimenu-->
    <style name="NavigationDrawerStyle">
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:fontFamily">@font/pressstart</item>
        <item name="android:textSize">10sp</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
        <item name="itemTextColor">@color/colorWhite</item>
        <item name="itemIconTint">@color/bg2</item>

    <!-- app:itemIconTint="@color/bg2"
     app:itemTextColor="@color/colorWhite"-->
 </style>
 <!--END navimenu-->

    <!-- vnitrek setting-->
    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/pressstart</item>
        <item name="fontFamily">@font/pressstart</item>

        <item name="android:textColorPrimary">@color/colorWhite</item><!-- HEADER-->
        <item name="android:textColor">@color/colorWhite</item><!-- ITEMS-->
        <item name="android:textSize">10sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="colorPrimary">@color/bg2</item>
        <item name="colorPrimaryDark">@color/bg2</item>
        <item name="colorAccent">@color/bg2</item>


        <!--<item name="android:windowBackground">@color/colorMenuBack</item>-->

        <item name="android:windowBackground">@color/black</item>

        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item><!-- Dialog v settings (napr. kdyz se zepta, jestli restart aplikace)-->



    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>
